<% if current_user %>
<div class="row">
    <div class="col-md-11">
        <h1>Todays</h1>
    </div>
    <div class="col-md-1">
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Priority</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
    <% no = 1 %>
        <% todays.each do |today| %>
            <tr>
                <td><%= no %></td>
                <td><%= today.name %></td>
                <td><%= today.description %></td>
                <td><%= today.due_date.strftime("%d %B %Y") %></td>
                <td><%= "#{today.priority}/10" %></td>
                <td><%= today.created_at.strftime("%H:%M %p, %d %B %Y") %></td>
            </tr>
            <% no += 1 %>
        <% end %>
    </tbody>
</table>

<% else %>
    <h1 class="text-center">You're not logged in</h1>
<% end %>